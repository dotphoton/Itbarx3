<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/tab_fragment_first_timeline_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:weightSum="530">


    <LinearLayout
        android:id="@+id/timeline_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="530"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="34">

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/timeline_fragment_content"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:orientation="vertical"
            android:weightSum="475">

            <LinearLayout
                android:id="@+id/timeline_fragment_buttons"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="50"
                android:background="@drawable/border_fragments_upper_buttons"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.itbarxproject.custom.component.ButtonRegular
                    android:id="@+id/timeline_fragment_popular_button"
                    style="@style/fragments_clickable_upper_buttons_default"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_fragments"
                    android:text="@string/populartimeline_fragment_screen_popular_text"
                    />

                <com.itbarxproject.custom.component.ButtonRegular
                    android:id="@+id/timeline_fragment_timeline_button"
                    style="@style/fragments_non_clickable_upper_buttons_default"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/populartimeline_fragment_screen_timeline_text"
                    android:textColor="@color/white"
                   />

            </LinearLayout>

            <View
                android:id="@+id/fragment_timeline_under_buttons"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="5"
                android:visibility="invisible"/>

            <LinearLayout
                android:id="@+id/fragment_timeline_others"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="425"
                android:orientation="vertical"
                >

                <ListView
                    android:id="@+id/timeline_fragment_screen_ListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@drawable/pencere_alt_gorunum"
                    android:dividerHeight="3dp"
                   style="@style/VerticalListStyles"
                    />
            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:visibility="invisible"/>

    </LinearLayout>
</LinearLayout>